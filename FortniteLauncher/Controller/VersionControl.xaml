<UserControl x:Class="FortniteLauncher.Controller.VersionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FortniteLauncher.Controller"
             mc:Ignorable="d" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             Height="284" Width="246">
    <Grid Margin="5,5,5,5">
        <Border BorderBrush="AliceBlue" BorderThickness="3" Grid.RowSpan="2" Margin="18,0,18,0"/>
        <Image x:Name="SeasonImage" Cursor="Hand" Source="https://cdn.discordapp.com/attachments/1107761073165181099/1125476074181099631/Splash.bmp" Margin="5,5,5,53" Grid.Row="1"/>
        <Label x:Name="BuildName" Content="PlaceHolder" Margin="26,222,68,26" Grid.Row="1"/>
        <Label x:Name="BuildVersion" FontSize="10" Content="PlaceHolder" Margin="26,244,68,10"/>
        <ui:Button x:Name="DeleteBuild" Click="DeleteBuild_Click"  Icon="Delete12" Appearance="Danger" Margin="173,235,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="0.184,0.899" />
    </Grid>
</UserControl>
